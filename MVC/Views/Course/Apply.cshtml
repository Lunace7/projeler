@model Candidate
<div class="container mt-4">
    <div class="row justify-content-center">
    <div class="col-md-12 col-lg-8">
    <div class="display-6 text-center">
        <h2>Apply</h2>
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-2">
        <label>Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label>FirstName</label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label>LastName</label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label>Age</label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="18">19</option>
            <option value="18">20</option>
            <option value="18">21</option>
            <option value="18">22</option>
            <option value="18">23</option>
        </select>
    </div>
    <div>
        <fieldset>
            <legend>Select One Course</legend>
            <p>
                <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.Net Course MVC" checked>
                <label>ASP.Net Course MVC</label>
            </p>
            <p>
                <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.Net Course API">
                <label>ASP.Net Course API</label>
            </p>
            <p>
                <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.Net Course">
                <label>Blazor</label>
            </p>
        </fieldset>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>